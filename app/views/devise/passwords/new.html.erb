<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
<h2 class="text-center">Esqueci minha senha</h2>
  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Seu email", input_html: {class: "form-control"} %>


    <%= f.button :submit, "Redefinir Senha", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>