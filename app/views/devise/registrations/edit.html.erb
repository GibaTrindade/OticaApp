<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
<h2 class="text-center">Configurações de Usuário</h2>
  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: "Senha", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirme sua senha", input_html: {class: "form-control"} %>
    <%= f.input :current_password, required: true, label: false, placeholder: "Senha Atual", input_html: {class: "form-control"} %>

    <%= f.button :submit, "Atualizar", class: "btn btn-primary btn-block" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
</div>