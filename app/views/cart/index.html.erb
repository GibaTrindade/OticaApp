	<li>
		<p>Marca: <%= product.brand %></p>
		<p>Tipo: <%= product.product_type %></p>
		<p>Quantidade: <%= quantity %></p>
		<p>Pre√ßo: <%= number_to_currency(product.price, :unit => 'R$') %></p>
		<p><%= link_to "Remover da Venda", remove_path(product) %></p>
	</li>
<% end %>
</ul>