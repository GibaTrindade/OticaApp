<p id="notice"><%= notice %></p>

<div class="panel panel-default">
<div class="panel-heading"><h1 class="text-center">Estoque</h1></div>

<div class="panel-body">
<table class="table table-hover table-bordered text-center">
	<thead>
	  <tr>
	  	<th class="text-center">Referência</th>
	    <th class="text-center">Marca</th>
	    <th class="text-center">Tamanho</th>
	    <th class="text-center">Gênero</th>
	    <th class="text-center">Tipo</th>
	    <th class="text-center">Preço</th>
	    <th colspan="3"></th>
	  </tr>
    </thead>
 <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.reference %></td>
      <td><%= product.brand %></td>
      <td><%= product.size %></td>
      <td><%= product.gender %></td>
      <td><%= product.product_type %></td>
      <td>R$ <%= product.price %></td>
      <td><p class="btn btn-default"><%= link_to "Exibir", product %></p></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>

<div class="row">
  <div class="col-lg-6">
  <%= link_to 'Adicionar Novo Produto', new_product_path, class: "btn btn-link btn-sm" %><br><br>
  <%= link_to "Busca Avançada", new_search_path, class: "btn btn-link btn-sm" %>
  </div>
</div>

</div>