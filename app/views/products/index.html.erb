<%= form_tag(products_path, :method =>'get', id: "search-form") do %>
<div class="input-group">
	<%= text_field_tag :brand, params[:brand], placeholder: "digite a marca", class: "form-control" %>
  <%= text_field_tag :gender, params[:gender], placeholder: "digite o gênero", class: "form-control" %>
  <span class="input-group-btn">
	<%= submit_tag "Filtar", class: 'btn btn-primary' %>
</span>
</div>
<% end %>
<br>

<% if @products.present? %>
<div class="panel panel-default">
<div class="panel-heading"><h1 class="text-center">Estoque</h1></div>

<div class="panel-body">
<table class="table table-hover table-bordered text-center">
	<thead>
	  <tr>
	  	<th class="text-center">Referência</th>
	    <th class="text-center">Marca</th>
	    <th class="text-center">Tamanho</th>
	    <th class="text-center">Gênero</th>
	    <th class="text-center">Tipo</th>
	    <th class="text-center">Preço</th>
	    <th colspan="3"></th>
	  </tr>
    </thead>
 <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.reference %></td>
      <td><%= product.brand %></td>
      <td><%= product.size %></td>
      <td><%= product.gender %></td>
      <td><%= product.product_type %></td>
      <td>R$ <%= product.price %></td>
      <td><p class="btn btn-default"><%= link_to "Detalhes", product %></p></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>

<div class="row">
  <div class="col-lg-6">
  	<%= link_to 'Adicionar Novo Produto', new_product_path, class: "btn btn-link btn-sm" %><br><br>
  	<%= link_to 'Ver estoque completo', products_path, class: "btn btn-link btn-sm" %>
  </div>
</div>

</div>

<% else %>
  <p>Nenhum resultado com os parâmetros <%= params[:search] %></p>
  <%= link_to 'Ver estoque completo', products_path, class: "btn btn-link btn-sm" %>
<% end %>
