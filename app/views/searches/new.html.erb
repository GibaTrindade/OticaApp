<h1>Busca Avançada</h1>

<%= form_for @search do |s| %>

	<div class="field">
		<%= s.label :keywords %><br />
		<%= s.text_field :keywords %>
 	 </div>
  	<div class="field">
		<%= s.label :brand %>
		<%= s.text_field :brand %>
	</div>
	<div class="field">
		<%= s.label :gender %>
		<%= s.select :gender, options_for_select(@genders), :include_blank => true %>
	</div>
	<div class="field">
		<%= s.label :product_type %>
		<%= s.select :product_type, options_for_select(@product_types), :include_blank => true %>
	</div>
	<div class="field">
		<%= s.label :min_price, "Faixa de Preço" %><br />
		<%= s.text_field :min_price, size: 10 %> -
	    <%= s.text_field :max_price, size: 10 %>
	</div>
	<div class="actions"><%= s.submit "Buscar" %></div>

<% end %>